	keywords = {{STARS}: {OSCILLATIONS}, {TECHNIQUES}: {RADIAL} {VELOCITIES}, {STARS}: {INDIVIDUAL}: \{{ET} {AL}. \}{PHA} {CMI} = {PROCYON}, {TECHNIQUES}: {INTERFEROMETRIC}},
