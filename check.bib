	author = {Mosser, B. and Goupil, M. J. and Belkacem, K. and Michel, E. and Stello, D. and Marques, J. P. and Elsworth, Y. and Barban, C. and Beck, P. G. and Bedding, T. R. and De Ridder, J. and García, R. A. and Hekker, S. and Kallinger, T. and Samadi, R. and Stumpe, M. C. and Barclay, T. and Burke, C. J.},
	urldate = {2019-06-06},
