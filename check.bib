	journaltitle = {The Astrophysical Journal},
	author = {Deupree, Robert G.},
	urldate = {2019-06-09},
	date = {2001-05},
	keywords = {Stars: Evolution, Stars: Interiors, Stars: Rotation},
}

@article{bedding_evidence_2001-2,
