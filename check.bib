	author = {Curtis, Jason Lee and Agüeros, Marcel A. and Matt, Sean P. and Covey, Kevin R. and Douglas, Stephanie T. and Angus, Ruth and Saar, Steven H. and Cody, Ann Marie and Vanderburg, Andrew and Law, Nicholas M. and Kraus, Adam L. and Latham, David W. and Baranec, Christoph and Riddle, Reed and Ziegler, Carl and Lund, Mikkel N. and Torres, Guillermo and Meibom, Søren and Aguirre, Victor Silva and Wright, Jason T.},
	urldate = {2023-02-26},
