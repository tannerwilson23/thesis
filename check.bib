@article{somers_impact_2015-1,
	title = {The Impact of Starspots on Mass and Age Estimates for Pre-main Sequence Stars},
	volume = {10},
	issn = {1743-9213, 1743-9221},
	url = {https://www.cambridge.org/core/journals/proceedings-of-the-international-astronomical-union/article/impact-of-starspots-on-mass-and-age-estimates-for-premain-sequence-stars/E3DE623A7D243EC0C97A90D24D3C6EF1},
