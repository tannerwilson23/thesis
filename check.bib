@article{cao_starspots_2022-1,
	title = {Starspots and Magnetism: Testing the Activity Paradigm in the Pleiades and M67},
	volume = {517},
	issn = {0035-8711, 1365-2966},
	url = {http://arxiv.org/abs/2209.10549},
