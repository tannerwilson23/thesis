@article{tayar_rapid_2015-1,
	title = {{RAPID} {ROTATION} {OF} {LOW}-{MASS} {RED} {GIANTS} {USING} {APOKASC}: A {MEASURE} {OF} {INTERACTION} {RATES} {ON} {THE} {POST}-{MAIN}-{SEQUENCE}},
