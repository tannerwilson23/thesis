@article{curtis_temporary_2019-1,
	title = {A Temporary Epoch of Stalled Spin-Down for Low-Mass Stars: Insights from {NGC} 6811 with Gaia and Kepler},
	volume = {879},
	issn = {0004-637X, 1538-4357},
	url = {http://arxiv.org/abs/1905.06869},
	doi = {10.3847/1538-4357/ab2393},
	shorttitle = {A Temporary Epoch of Stalled Spin-Down for Low-Mass Stars},
	abstract = {Stellar rotation was proposed as a potential age diagnostic that is precise, simple, and applicable to a broad range of low-mass stars (\{{\textbackslash}textbackslashleq{\textbackslash}1 {\textbackslash}M\_{\textbackslash}textbackslashodot{\textbackslash}). Unfortunately, rotation period {\textbackslash}(P\_\{{\textbackslash}textbackslashrm rot\}){\textbackslash} measurements of low-mass members of open clusters have undermined the idea that stars spin down with a common age dependence (i.e., {\textbackslash}P\_\{{\textbackslash}textbackslashrm rot\} {\textbackslash}textbackslashpropto {\textbackslash}textbackslashsqrt\{{\textbackslash}textbackslashrm age\}{\textbackslash}): K dwarfs appear to spin down more slowly than F and G dwarfs. Ag{\textbackslash}textbackslash"ueros et al. (2018) interpreted data for the \{{\textbackslash}textbackslashapprox{\textbackslash}1.4-Gyr-old cluster {NGC} 752 differently, proposing that after having converged onto a slow-rotating sequence in their first 600-700 Myr (by the age of Praesepe), K dwarf {\textbackslash}P\_\{{\textbackslash}textbackslashrm rot\}{\textbackslash} stall on that sequence for an extended period of time. We use data from Gaia {DR}2 to identify likely single-star members of the \{{\textbackslash}textbackslashapprox{\textbackslash}1-Gyr-old cluster {NGC} 6811 with Kepler light curves. We measure {\textbackslash}P\_\{{\textbackslash}textbackslashrm rot\}{\textbackslash} for 171 members, more than doubling the sample relative to the existing catalog and extending the mass limit from \{{\textbackslash}textbackslashapprox{\textbackslash}0.8 to \{{\textbackslash}textbackslashapprox{\textbackslash}0.6 {\textbackslash}M\_{\textbackslash}textbackslashodot{\textbackslash}. We then apply a gyrochronology formula calibrated with Praesepe and the Sun to 27 single G dwarfs in {NGC} 6811 to derive a precise gyrochronological age for the cluster of 1.04\{{\textbackslash}textbackslashpm{\textbackslash}0.07 Gyr. However, when our new low-mass rotators are included, {NGC} 6811's color-{\textbackslash}P\_\{{\textbackslash}textbackslashrm rot\}{\textbackslash} sequence deviates away from the naive 1 Gyr projection down to {\textbackslash}T\_\{{\textbackslash}textbackslashrm eff\} {\textbackslash}textbackslashapprox 4295{\textbackslash} K (K5V, 0.7 {\textbackslash}M\_{\textbackslash}textbackslashodot{\textbackslash}), where it clearly overlaps with Praesepe's. Combining these data with {\textbackslash}P\_\{{\textbackslash}textbackslashrm rot\}{\textbackslash} for other clusters, we conclude that the assumption that mass and age are separable dependencies is invalid. Furthermore, the cluster data show definitively that stars experience a temporary epoch of reduced braking efficiency where {\textbackslash}P\_\{{\textbackslash}textbackslashrm rot\}{\textbackslash} stall, and that the duration of this epoch lasts longer for lower-mass stars.},
	pages = {49},
	number = {1},
	journaltitle = {The Astrophysical Journal},
	author = {Curtis, Jason Lee and Agüeros, Marcel A. and Douglas, Stephanie T. and Meibom, Søren},
	urldate = {2023-02-26},
	date = {2019-07},
	keywords = {Astrophysics - Solar and Stellar Astrophysics},
}

@misc{hoffman_no-u-turn_2011-1,
	title = {The No-U-Turn Sampler: Adaptively Setting Path Lengths in Hamiltonian Monte Carlo},
	url = {http://arxiv.org/abs/1111.4246},
	shorttitle = {The No-U-Turn Sampler},
	abstract = {Hamiltonian Monte Carlo ({HMC}) is a Markov chain Monte Carlo ({MCMC}) algorithm that avoids the random walk behavior and sensitivity to correlated parameters that plague many {MCMC} methods by taking a series of steps informed by first-order gradient information. These features allow it to converge to high-dimensional target distributions much more quickly than simpler methods such as random walk Metropolis or Gibbs sampling. However, {HMC}'s performance is highly sensitive to two user-specified parameters: a step size \{{\textbackslash}textbackslashepsilon\} and a desired number of steps L. In particular, if L is too small then the algorithm exhibits undesirable random walk behavior, while if L is too large the algorithm wastes computation. We introduce the No-U-Turn Sampler ({NUTS}), an extension to {HMC} that eliminates the need to set a number of steps L. {NUTS} uses a recursive algorithm to build a set of likely candidate points that spans a wide swath of the target distribution, stopping automatically when it starts to double back and retrace its steps. Empirically, {NUTS} perform at least as efficiently as and sometimes more efficiently than a well tuned standard {HMC} method, without requiring user intervention or costly tuning runs. We also derive a method for adapting the step size parameter \{{\textbackslash}textbackslashepsilon\} on the fly based on primal-dual averaging. {NUTS} can thus be used with no hand-tuning at all. {NUTS} is also suitable for applications such as {BUGS}-style automatic inference engines that require efficient "turnkey" sampling algorithms.},
	publisher = {{arXiv}},
	author = {Hoffman, Matthew D. and Gelman, Andrew},
	urldate = {2023-01-17},
	date = {2011-11},
	doi = {10.48550/arXiv.1111.4246},
	keywords = {Computer Science - Machine Learning, Statistics - Computation},
}

