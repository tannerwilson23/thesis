	journaltitle = {Astronomy and Astrophysics},
	author = {Belkacem, K. and Goupil, M. J. and Dupret, M. A. and Samadi, R. and Baudin, F. and Noels, A. and Mosser, B.},
	urldate = {2020-09-09},
	date = {2011-06},
	keywords = {convection, stars: interiors, stars: oscillations, turbulence},
}

