	journaltitle = {The Astrophysical Journal},
	author = {Casey, Andrew R. and Ho, Anna Y. Q. and Ness, Melissa and Hogg, David W. and Rix, Hans-Walter and Angelou, George C. and Hekker, Saskia and Tout, Christopher A. and Lattanzio, John C. and Karakas, Amanda I. and Woods, Tyrone E. and Price-Whelan, Adrian M. and Schlaufman, Kevin C.},
