@article{saders_fast_2013,
	title = {{FAST} {STAR}, {SLOW} {STAR}\${\textbackslash}mathsemicolon\$ {OLD} {STAR}, {YOUNG} {STAR}: {SUBGIANT} {ROTATION} {AS} A {POPULATION} {AND} S℡{LAR} {PHYSICS} {DIAGNOSTIC}},
