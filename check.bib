	author = {Montet, Benjamin T. and Morton, Timothy D. and Foreman-Mackey, Daniel and Johnson, John Asher and Hogg, David W. and Bowler, Brendan P. and Latham, David W. and Bieryla, Allyson and Mann, Andrew W.},
