@article{meibom_slar_2009,
	title = {S℡{LAR} {ROTATION} {IN} M35: {MASS}–{PERIOD} {RELATIONS}, {SPIN}-{DOWN} {RATES}, {AND} {GYROCHRONOLOGY}*},
