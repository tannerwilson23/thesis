@article{canuto_critical_2002-2,
	title = {Critical Richardson numbers and gravity waves},
	volume = {384},
	issn = {0004-6361},
	url = {http://cdsads.u-strasbg.fr/abs/2002A%26A...384.1119C},
	doi = {10.1051/0004-6361:20011773},
	abstract = {In this paper we present two new results. The first concerns the proper identification of the critical Richardson number Ri(cr) above which there is no longer turbulent mixing. Thus far, all studies have assumed that: Ri (cr) = Riell (cr) = 1/4. However, since Riell(cr) determines the upper limit of a laminar regime (superscript l), it has little relevance to stars where the problem is not to determine the end point of a laminar regime but the endpoint of turbulence. We show that the latter is characterized by Rit (cr), where t stands for turbulence, and has a value four times larger than (1): Ri (cr) = Rit (cr) ≈ 4 Riell (cr)≈ 1. We also show that use of (2) instead of (1) changes the conclusions of recent studies. Inclusion of radiative losses (characterized by the Peclet number Pe) which weaken stable stratification and help turbulence, further changes (2) to (r stands for radiative): Ri (cr) = Rir (cr) {\textbackslash}textasciitilde (1+Pe)Pe-1 Rit (cr) which, for Pe{\textbackslash}textless1, allows turbulence to survive far longer than (2). Finally, turbulent convection generates gravity waves that propagate into the radiative region and act as an additional source of energy. This further changes Eq. (3) to (gw stands for gravity waves): Ri (cr) = Rigw (cr) =Rir (1+ηgw) where etagw {\textbackslash}textgreater1. In conclusion, the successive inclusion of relevant physical processes leads to a chain of increasing values of Ri (cr): Ri (cr) = Riell (cr) → Rit (cr)→ Riˆr (cr)→ Rigw (cr). The second result concerns the dependence of the diffusivity D on Omega . We show that the commonly used expression Dχ-1{\textbackslash}textasciitilde (Ω/N)2 is not correct for the regime Pe{\textbackslash}textless1 that characterizes a stably stratified regime. The proper Omega -dependence is: Dχ-1{\textbackslash}textasciitilde (Ω/N)4.},
	pages = {1119--1123},
	journaltitle = {Astronomy and Astrophysics},
	author = {Canuto, V. M.},
	urldate = {2019-06-13},
	date = {2002-03},
	keywords = {{CONVECTION}, {SUN}: {GENERAL}, {SUN}: {INTERIOR}, {TURBULENCE}},
}

