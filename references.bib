@article{stello_asteroseismic_2013,
	abstract = {Of the more than 150,000 targets followed by the Kepler Mission, about 
10\% were selected as red giants. Due to their high scientific value, in
particular for Galaxy population studies and stellar structure and
evolution, their Kepler light curves were made public in late 2011. More
than 13,000 (over 85\%) of these stars show intrinsic flux variability
caused by solar-like oscillations making them ideal for large-scale
asteroseismic investigations. We automatically extracted individual
