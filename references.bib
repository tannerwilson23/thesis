@article{di_mauro_internal_2016,
	abstract = {In this paper we study the dynamics of the stellar interior of the early red-giant star KIC 4448777 by asteroseismic inversion of 14 splittings of the dipole mixed modes obtained from \{{\textbackslash}it Kepler\} observations. In order to overcome the complexity of the oscillation pattern typical of red-giant stars, we present a procedure which involves a combination of different methods to extract the rotational splittings from the power spectrum. We find not only that the core rotates faster than the surface, confirming previous inversion results generated for other red giants (Deheuvels et al. 2012,2014), but we also estimate the variation of the angular velocity within the helium core with a spatial resolution of \${\textbackslash}Delta r=0.001R\$ and verify the hypothesis of a sharp discontinuity in the inner stellar rotation (Deheuvels et al. 2014). The results show that the entire core rotates rigidly with an angular velocity of about \${\textbackslash}langle{\textbackslash}Omega\_c/2{\textbackslash}pi{\textbackslash}rangle=748{\textbackslash}pm18\${\textasciitilde}nHz and provide evidence for an angular velocity decrease through a region between the helium core and part of the hydrogen burning shell; however we do not succeed to characterize the rotational slope, due to the intrinsic limits of the applied techniques. The angular velocity, from the edge of the core and through the hydrogen burning shell, appears to decrease with increasing distance from the center, reaching an average value in the convective envelope of \${\textbackslash}langle{\textbackslash}Omega\_s/2{\textbackslash}pi{\textbackslash}rangle=68{\textbackslash}pm22\${\textasciitilde}nHz. Hence, the core in KIC{\textasciitilde}4448777 is rotating from a minimum of 8 to a maximum of 17 times faster than the envelope. We conclude that a set of data which includes only dipolar modes is sufficient to infer quite accurately the rotation of a red giant not only in the dense core but also, with a lower level of confidence, in part of the radiative region and in the convective envelope.},
	author = {Di Mauro, M. P. and Ventura, R. and Cardini, D. and Stello, D. and Christensen-Dalsgaard, J. and Dziembowski, W. A. and Paterno', L. and Beck, P. G. and Bloemen, S. and Davies, G. R. and De Smedt, K. and Elsworth, Y. and Garcia, R. A. and Hekker, S. and Mosser, B. and Tkachenko, A.},
	doi = {10.3847/0004-637X/817/1/65},
	issn = {1538-4357},
	journal = {The Astrophysical Journal},
	keywords = {Astrophysics - Solar and Stellar Astrophysics},
	month = jan,
	note = {arXiv: 1511.06160},
	number = {1},
	pages = {65},
	title = {Internal rotation of the red-giant star {KIC} 4448777 by means of asteroseismic inversion},
	url = {http://arxiv.org/abs/1511.06160},
	urldate = {2020-09-09},
	volume = {817},
	year = {2016},
