@article{bazan_djehuty_2003,
	abstract = {Current practices in stellar evolution employ one dimensional calculations that quantitatively apply only to a minority of the observed stars (single non-rotating stars, or well detached binaries). Even in these systems, astrophysicists are dependent on approximations to handle complex three dimensional (3D) processes like convection. Understanding the structure of binary stars, like those that lead to the Type{\textasciitilde}Ia supernovae used to measure the expansion of the universe, are grossly non-spherical and await a 3D treatment. To approach very large problems like multi dimensional modeling of stars, the Lawrence Livermore National Laboratory has invested in massively parallel computers and invested even more in developing the algorithms to utilize them on complex physics problems. We have leveraged skills from across the lab to develop a 3D stellar evolution code, Djehuty (after the Egyptian god for writing and calculation) that operates efficiently on platforms with thousands of nodes, with the best available physical data (Opacities, EOS, etc.). Djehuty has incorporated all basic physics for modeling stars including an accurate equation of state, radiation transport by diffusion, thermonuclear reaction rates, and hydrodynamics, and have begun testing it in a number of applications.},
	author = {Baz{\'a}n, G. and Dearborn, D. S. P. and Dossa, D. D. and Eggleton, P. P. and Taylor, A. and Castor, J. I. and Murray, S. and Cook, K. H. and Eltgroth, P. G. and Cavallo, R. M. and Turcotte, S. and Keller, S. C. and Pudliner, B. S.},
	journal = {3D Stellar Evolution},
	language = {en},
	pages = {1},
	title = {Djehuty, a code for modeling stars in three dimensions},
	url = {https://ui.adsabs.harvard.edu/abs/2003ASPC..293....1B/abstract},
	urldate = {2019-11-10},
	volume = {293},
	year = {2003},
	bdsk-url-1 = {https://ui.adsabs.harvard.edu/abs/2003ASPC..293....1B/abstract}}

