	doi = {10.1051/epjconf/201716005012},
	month = oct,
	note = {Conference Name: European Physical Journal Web of Conferences},
	pages = {05012},
	shorttitle = {Seismology of {Giant} {Planets}},
	title = {Seismology of {Giant} {Planets}: {General} {Overview} and {Results} from the {Kepler} {K2} {Observations} of {Neptune}},
	url = {http://adsabs.harvard.edu/abs/2017EPJWC.16005012G},
	urldate = {2020-09-09},
	volume = {160},
	year = {2017},
	bdsk-url-1 = {http://adsabs.harvard.edu/abs/2017EPJWC.16005012G},
	bdsk-url-2 = {https://doi.org/10.1051/epjconf/201716005012}}

@article{stello_oscillating_2015,
	abstract = {NASA's re-purposed Kepler mission---dubbed K2---has 
brought new scientific opportunities that were not anticipated for the
original Kepler mission. One science goal that makes optimal use of K2's
capabilities, in particular its 360$\,^{\circ}$ ecliptic field of view, is
galactic archaeology---the study of the evolution of the Galaxy from
the fossil stellar record. The thrust of this research is to exploit
high-precision, time-resolved photometry from K2 in order to detect
oscillations in red giant stars. This asteroseismic information can
provide estimates of stellar radius (hence distance), mass, and age of
vast numbers of stars across the Galaxy. Here we present the initial
analysis of a subset of red giants, observed toward the north galactic
gap, during the mission's first full science campaign. We
investigate the feasibility of using K2 data for detecting oscillations
in red giants that span a range in apparent magnitude and evolutionary
state (hence intrinsic luminosity). We demonstrate that oscillations are
detectable for essentially all cool giants within the \{log\}g range
∼1.9-3.2. Our detection is complete down to \{{\textbackslash}text\{Kp\}\} ∼ 14.5,
which results in a seismic sample with little or no detection bias. This
sample is ideally suited to stellar population studies that seek to
investigate potential shortcomings of contemporary Galaxy models.},
