	number = {1},
	pages = {1468--1490},
	shorttitle = {Angular momentum transport, layering, and zonal jet formation by the {GSF} instability},
	title = {Angular momentum transport, layering, and zonal jet formation by the {GSF} instability: nonlinear simulations at a general latitude},
