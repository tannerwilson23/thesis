	journal = {The Astrophysical Journal},
	language = {en},
	month = apr,
	note = {Publisher: The American Astronomical Society},
	number = {1},
	pages = {679},
	shorttitle = {S℡{LAR} {ROTATION} {IN} {M35}},
	title = {S℡{LAR} {ROTATION} {IN} {M35}: {MASS}--{PERIOD} {RELATIONS}, {SPIN}-{DOWN} {RATES}, {AND} {GYROCHRONOLOGY}*},
	url = {https://dx.doi.org/10.1088/0004-637X/695/1/679},
	urldate = {2023-03-13},
