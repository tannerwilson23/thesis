@article{mosser_new_1998,
	abstract = {The Fourier transform spectrometer based at the CFH telescope was used 
as a stellar accelerometer in a new seismometric mode. One fringe at a
selected path difference of the interferogram produced by the flux of a
star through a bandpass chosen in the near infrared is continuously
