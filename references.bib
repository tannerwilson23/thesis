	month = feb,
	pages = {279--290},
	title = {The evolution of rotating stars. {II} - {Calculations} with time-dependent redistribution of angular momentum for 7- and 10-solar-mass stars},
	url = {http://adsabs.harvard.edu/abs/1978ApJ...220..279E},
	urldate = {2019-06-06},
