	journal = {The Astrophysical Journal},
	keywords = {Astrophysics - Solar and Stellar Astrophysics, magnetic fields, planet--star interactions, stars: AGB and post-AGB, stars: rotation, white dwarfs},
	month = jul,
	note = {ADS Bibcode: 2015ApJ...808...35K},
	pages = {35},
	title = {Rotation of {Giant} {Stars}},
