@article{curtis_temporary_2019,
	abstract = {Stellar rotation was proposed as a potential age diagnostic that is precise, simple, and applicable to a broad range of low-mass stars (\${\textbackslash}leq\$1 \$M\_{\textbackslash}odot\$). Unfortunately, rotation period \$(P\_\{{\textbackslash}rm rot\})\$ measurements of low-mass members of open clusters have undermined the idea that stars spin down with a common age dependence (i.e., \$P\_\{{\textbackslash}rm rot\} {\textbackslash}propto {\textbackslash}sqrt\{{\textbackslash}rm age\}\$): K dwarfs appear to spin down more slowly than F and G dwarfs. Ag{\textbackslash}"ueros et al. (2018) interpreted data for the \${\textbackslash}approx\$1.4-Gyr-old cluster NGC 752 differently, proposing that after having converged onto a slow-rotating sequence in their first 600-700 Myr (by the age of Praesepe), K dwarf \$P\_\{{\textbackslash}rm rot\}\$ stall on that sequence for an extended period of time. We use data from Gaia DR2 to identify likely single-star members of the \${\textbackslash}approx\$1-Gyr-old cluster NGC 6811 with Kepler light curves. We measure \$P\_\{{\textbackslash}rm rot\}\$ for 171 members, more than doubling the sample relative to the existing catalog and extending the mass limit from \${\textbackslash}approx\$0.8 to \${\textbackslash}approx\$0.6 \$M\_{\textbackslash}odot\$. We then apply a gyrochronology formula calibrated with Praesepe and the Sun to 27 single G dwarfs in NGC 6811 to derive a precise gyrochronological age for the cluster of 1.04\${\textbackslash}pm\$0.07 Gyr. However, when our new low-mass rotators are included, NGC 6811's color-\$P\_\{{\textbackslash}rm rot\}\$ sequence deviates away from the naive 1 Gyr projection down to \$T\_\{{\textbackslash}rm eff\} {\textbackslash}approx 4295\$ K (K5V, 0.7 \$M\_{\textbackslash}odot\$), where it clearly overlaps with Praesepe's. Combining these data with \$P\_\{{\textbackslash}rm rot\}\$ for other clusters, we conclude that the assumption that mass and age are separable dependencies is invalid. Furthermore, the cluster data show definitively that stars experience a temporary epoch of reduced braking efficiency where \$P\_\{{\textbackslash}rm rot\}\$ stall, and that the duration of this epoch lasts longer for lower-mass stars.},
	author = {Curtis, Jason Lee and Ag{\"u}eros, Marcel A. and Douglas, Stephanie T. and Meibom, S{\o}ren},
	doi = {10.3847/1538-4357/ab2393},
	issn = {0004-637X, 1538-4357},
	journal = {The Astrophysical Journal},
	keywords = {Astrophysics - Solar and Stellar Astrophysics},
